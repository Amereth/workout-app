generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model Exercise {
    id        Int           @id @default(autoincrement())
    createdAt DateTime      @default(now())
    updatedAt DateTime      @default(now()) @updatedAt
    name      String        @unique
    workouts  WorkoutPlan[]
}

model WorkoutPlan {
    id        Int        @id @default(autoincrement())
    createdAt DateTime   @default(now())
    updatedAt DateTime   @default(now()) @updatedAt
    name      String
    userId    String
    exercises Exercise[]
}
